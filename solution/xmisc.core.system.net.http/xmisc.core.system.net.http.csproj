<Project Sdk="Microsoft.NET.Sdk">
  <Target Name="AutoVersion" AfterTargets="AfterBuild">
  <PropertyGroup>
    <PackageVersion>$(GitSemVerMajor).$(GitSemVerMinor).$(GitSemVerPatch)$(GitSemVerDashLabel)</PackageVersion>	
  </PropertyGroup>	 
  </Target>
  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
	<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
	<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
   <PackageReference Include="GitInfo" Version="2.0.8">
	 <PrivateAssets>All</PrivateAssets>
	</PackageReference>
    <PackageReference Include="System.Net.Http" Version="4.3.3" />
    <PackageReference Include="xmisc.core.io" Version="3.0.2-alpha" />
  </ItemGroup>

</Project>
